                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="#666666" />

            <RelativeLayout
                android:id="@+id/people_phone_upper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/people_phone1_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_phone1_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:focusable="false"
                    android:text="Phone" />

                <EditText
                    android:id="@+id/people_phone1_name_edit_text"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_toRightOf="@+id/people_phone1_text_view"
                    android:focusable="false"
                    android:hint=""
                    android:singleLine="true" />

                <copilot.module.people.util.PhoneEditTextMask
                    android:id="@+id/people_phone1_number_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_phone1_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_field_gap_width"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_phone1_name_edit_text"
                    android:hint="###-###-####"
                    android:inputType="phone" />
                <!--
                    <ImageButton android:id="@+id/people_phone_button_down" android:src="@drawable/people_arrow_down" 
					android:background="@android:color/transparent" android:layout_alignParentRight="true" 
					android:layout_alignParentBottom="true" android:layout_marginRight="@dimen/people_member_button_margin_right" 
					android:layout_marginBottom="@dimen/people_member_button_margin_bottom" android:layout_width="wrap_content" 
					android:layout_height="wrap_content" />
