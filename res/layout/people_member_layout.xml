                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_school_attended_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_state_id_text_view"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
