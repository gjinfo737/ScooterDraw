                    android:hint=""
                    android:singleLine="true" />

                <copilot.module.people.util.PhoneEditTextMask
                    android:id="@+id/people_phone2_number_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_phone2_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_field_gap_width"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_phone2_name_edit_text"
                    android:hint="###-###-####"
                    android:inputType="phone" />
