<?xml version="1.0" encoding="utf-8"?>
<copilot.module.people.EditMemberView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/people_member_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <requestFocus />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/people_name_upper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/people_ssn_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_ssn_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="SSN" >

                    <requestFocus />
                </TextView>

                <copilot.module.people.util.SsnEditTextMask
                    android:id="@+id/people_ssn_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_ssn_text_view"
                    android:hint="###-##-####"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/people_first_name_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_first_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="First Name" />

                <EditText
                    android:id="@+id/people_first_name_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_ssn_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_first_name_text_view"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/people_middle_name_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_middle_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="Middle" />

                <EditText
                    android:id="@+id/people_middle_name_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_first_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_middle_name_text_view"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/people_last_name_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_last_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="Last Name" />

                <EditText
                    android:id="@+id/people_last_name_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_middle_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_last_name_text_view"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/people_suffix_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
