                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_birth_place_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="Birth Place" />

                <EditText
                    android:id="@+id/people_birth_place_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_birth_date_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_birth_place_text_view"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
