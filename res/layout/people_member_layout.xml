                    <ImageButton android:id="@+id/people_name_button_up" android:src="@drawable/people_arrow_up" 
					android:background="@android:color/transparent" android:layout_alignParentRight="true" 
					android:layout_alignParentBottom="true" android:layout_marginRight="@dimen/people_member_button_margin_right" 
					android:layout_marginBottom="@dimen/people_member_button_margin_bottom" android:layout_width="wrap_content" 
					android:layout_height="wrap_content" />
                -->
            </RelativeLayout>

