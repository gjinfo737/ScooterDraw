                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_sis_number_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="SIS Number" />

                <copilot.module.people.util.SISEditTextMask
                    android:id="@+id/people_sis_number_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_state_id_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_sis_number_text_view"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/people_maiden_name_text_view"
                    android:layout_width="@dimen/people_member_text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/people_maiden_name_edit_text"
                    android:layout_marginLeft="@dimen/people_member_text_view_margin_left"
                    android:text="Maiden Name" />

                <EditText
                    android:id="@+id/people_maiden_name_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/people_sis_number_edit_text"
                    android:layout_marginLeft="@dimen/people_member_edit_text_margin_left"
                    android:layout_marginRight="@dimen/people_member_edit_text_margin_right"
                    android:layout_toRightOf="@+id/people_maiden_name_text_view"
                    android:hint=""
                    android:singleLine="true" />
