<?xml version="1.0" encoding="utf-8"?>
<copilot.module.breadcrumbs.layout.MBreadcrumbsTitleLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/mnavigator_cases_wrapper"
	>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/mnavigator_cases_linearLayout"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/mBreadcrumbsCasesLayoutIcon"
			android:src="@drawable/theme_std_case128x128"
			android:layout_width="@dimen/breadcrumb_icon_width"
			android:layout_height="@dimen/breadcrumb_icon_height">
		</ImageView>

		<RelativeLayout
			android:id="@+id/mnavigator_cases_relativeLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/mnavigator_case_label_linearLayout"
				android:orientation="horizontal"
				android:layout_centerHorizontal="true">
				<TextView
					android:layout_width="wrap_content"
					android:id="@+id/mBreadcrumbsCasesLayoutCasesStateTextView"
					android:text="State"
					android:layout_height="wrap_content">
				</TextView>
				<TextView
					android:layout_width="wrap_content"
					android:id="@+id/mBreadcrumbsCasesLayoutCasesLocalTextView"
					android:text="Local"
					android:layout_height="wrap_content"
					android:layout_marginLeft="3dp">
				</TextView>
			</LinearLayout>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/mBreadcrumbsCasesLayoutCasesCaseHeadTextView"
				android:text="Head"
				android:layout_height="wrap_content"
				android:layout_below="@+id/mnavigator_case_label_linearLayout"
				android:layout_centerHorizontal="true">
			</TextView>
		</RelativeLayout>
	</LinearLayout>

</copilot.module.breadcrumbs.layout.MBreadcrumbsTitleLayout>
